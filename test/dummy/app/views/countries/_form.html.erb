<% if country.errors.any? %>
  <%= render partial: 'shared/form_errors', locals: { form_errors: country } %>
<% end %>
<%= form_for country do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  <div>
    <%= form.label :code %>
    <%= form.text_field :code %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>