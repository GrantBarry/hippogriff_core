<div>
  <strong>Company name:</strong>
  <% if current_page?(account) %>
    <%= account.company_name %>
  <% else %>
    <%= link_to account.company_name, account %>
  <% end %>
</div>

<div>
  <strong>Legal name:</strong>
  <%= account.legal_name %>
</div>

<div>
  <strong>Email:</strong>
  <%= account.email %>
</div>

<div>
  <strong>Phone:</strong>
  <%= account.phone %> 
</div>

<div>
  <strong>Fax:</strong>
  <%= account.fax %>
</div>
<div>
  <%= link_to 'Edit', edit_account_path(account) %>
</div>
<div>
  <%= button_to 'Delete', account, method: :delete %>
</div>